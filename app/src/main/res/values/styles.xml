<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para los botones numéricos -->
    <style name="BotonNumerico" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/numeric_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Estilo para los botones de operación -->
    <style name="BotonOperacion" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/operation_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>
